{
    "swagger": "2.0",
    "info": {
        "description": "Provides a REST API for the Pool Project",
        "version": "1.0.0",
        "title": "Pool REST API",
        "contact": {
            "name": "Pool project team",
            "url": "https://github.com/no-domestic-violence"
        }
    },
    "host": "pool-api-mobile.herokuapp.com/api",
    "basePath": "/",
    "tags": [
        {
            "name": "article-controller",
            "description": "Article Controller"
        },
        {
            "name": "hotline-controller",
            "description": "Hotline Controller"
        },
        {
            "name": "sos-controller",
            "description": "Sos Controller"
        }
    ],
    "paths": {
        "/articles": {
            "post": {
                "tags": [
                    "article-controller"
                ],
                "summary": "Create article",
                "operationId": "createArticleUsingPOST",
                "consumes": 
                    "application/json"
                ,
                "produces":  "application/json",
                "parameters": [
                    {
                        "in": "body",
                        "name": "request",
                        "description": "request",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Article"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/Article"
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "403": {
                        "description": "Forbidden"
                    },
                    "404": {
                        "description": "Not Found"
                    }
                },
                "deprecated": false
            },
            "get": {
                "tags": [
                    "article-controller"
                ],
                "summary": "Get all articles",
                "operationId": "getAllArticlesUsingGET",
                "produces": 
                    "application/json"
                ,
                "parameters": [],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/articlesResponse"
                        }
                    },
                    "404": {
                        "description": "Not Found"
                    }
                },
                "deprecated": false

            }
        },
        "/articles/{articleId}": {
            "get": {
                "tags": [
                    "article-controller"
                ],
                "summary": "getArticleById",
                "operationId": "getArticleByIdUsingGET",
                "produces": 
                    "application/json",
                "parameters": [
                    {
                        "name": "articleId",
                        "in": "path",
                        "description": "Id of article that needs to be fetched",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema":  {
                            "$ref": "#/definitions/Article"
                        }
                    },
                    "400": {
                        "description": "Invalid article Id"
                    },
                    "404": {
                        "description": "Article not Found"
                    }
                }
            },
            "delete": {
                "tags": [
                    "article-controller"
                ],
                "summary": "deleteArticleById",
                "operationId": "deleteArticleByIdUsingDELETE",
                "produces": 
                    "application/json",
                "parameters": [
                    {
                        "name": "articleId",
                        "in": "path",
                        "description": "Article id to delete",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "202": {
                        "description": "Article successfully deleted"
                    },
                    "400": {
                        "description": "Invalid article Id"
                    },
                    "404": {
                        "description": "Article not Found"
                    }
                }
            }
        },
        "/users/{username}/contacts": {
            "patch": {
                "tags": [
                    "sos-controller"
                ],
                "summary": "Add sos contact",
                "operationId": "addContactUsingPATCH",
                "consumes":
                    "application/json",
                "produces":  "application/json",
                "parameters": [
                    {
                        "in": "path",
                        "name": "username",
                        "description": "username who adds contact",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Updated"
                        },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "405": {"description": "Validation exception" }
                    
                } },
                "get": {
                    "tags": [
                        "sos-controller"
                    ],
                    "summary": "Get contacts of a user",
                    "operationId": "getContactsUsingGET",
                    "produces": 
                        "application/json"
                    ,
                    "parameters": [{
                        "in": "path",
                        "name": "username",
                        "description": "username that fetches contact",
                        "required": true,
                        "type": "string"
                    }],
                    "responses": {
                        "200": {
                            "description": "OK",
                            "schema": {
                                "$ref": "#/definitions/User"
                            }
                        },
                        "401": {
                            "description": "Unauthorized"
                        },
                        "404": {
                            "description": "Not Found"
                        }
                    }
    
                }

            },
            "/users/{username}/contacts/{contactId}": {
                "patch": {
                    "tags": [
                        "sos-controller"
                    ],
                    "summary": "Edit sos contact",
                    "operationId": "editContactUsingPATCH",
                    "consumes":
                        "application/json",
                    "produces":  "application/json",
                    "parameters": [
                        {
                            "in": "path",
                            "name": "username",
                            "description": "username who edits their contact",
                            "required": true,
                            "type": "string"
                        },
                        {
                            "in": "path",
                            "name": "contactId",
                            "description": "ContactId to edit",
                            "required": true,
                            "type": "string"
                        }
                    ],
                    "responses": {
                        "201": {
                            "description": "Updated"
                            }
                        ,
                        "401": {
                            "description": "Unauthorized"
                        },
                        "404": {
                            "description": "Not Found"
                        },
                        "405": {"description": "Validation exception" } }
                        
                    },
                    "delete": {
                        "tags": [
                            "sos-controller"
                        ],
                        "summary": "delete sos contact by id",
                        "operationId": "deleteContactByIdUsingDELETE",
                        "produces": 
                            "application/json",
                        "parameters": [
                            {
                                "in": "path",
                                "name": "username",
                                "description": "username who deletes contact",
                                "required": true,
                                "type": "string"
                            },
                            {
                                "in": "path",
                                "name": "contactId",
                                "description": "ContactId to delete",
                                "required": true,
                                "type": "string"
                            }
                        ],
                        "responses": {
                            "202": {
                                "description": "Contact successfully deleted"
                            },
                            "400": {
                                "description": "Invalid contact Id"
                            },
                            "401": {
                                "description": "Unauthorized"
                            },
                            "404": {
                                "description": "Contact not Found"
                            }
                        }
                    }}

        
    },
    "definitions": {
        "Article": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string"
                },
                "author": {
                    "type": "string"
                },
                "text": {
                    "type": "string"
                },
                "url_to_image": {
                    "type": "string"
                },
                "violence_type": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "Sexual",
                            "Financial",
                            "Emotional"
                        ]
                    }
                },
                "created_at": {
                    "type": "string",
                    "format": "date-time"
                }
            },
            "title": "Article"
        },
        "articlesResponse": {
            "type": "object",
            "properties": {
                "body": {
                    "type": "array",
                    "$ref" : "#/definitions/Article"
                },
                "success": {
                    "type": "boolean"
                }
            },
            "title": "articlesResponse"
        },
        "User": {
            "type" : "object",
            "properties": {
                "username": {
                    "type" : "string"
                },
                "email": {
                    "type": "string"
                },
                "password":{
                    "type": "string"
                },
                "contacts": { "$ref" : "#/definitions/Contact"}
            }
        },
        "Contact": {
            "type": "object",
            "properties": {
                "name": {
                    "type" : "string"
                },
                "phone":{ "type" : "string"},
                "message": { "type" : "string"}
            }
        }
    },
    "schemes": [
        "https"
    ]
}