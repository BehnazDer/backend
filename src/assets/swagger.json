{
    "swagger": "2.0",
    "info": {
        "description": "Provides a REST API for the Pool Project",
        "version": "1.0.0",
        "title": "Pool REST API",
        "contact": {
            "name": "Pool project team",
            "url": "https://github.com/no-domestic-violence"
        }
    },
    "host": "https://pool-api-mobile.herokuapp.com/api",
    "basePath": "/",
    "tags": [
        {
            "name": "article-controller",
            "description": "Article Controller"
        },
        {
            "name": "hotline-controller",
            "description": "Hotline Controller"
        }
    ],
    "paths": {
        "/articles": {
            "post": {
                "tags": [
                    "article-controller"
                ],
                "summary": "Create article",
                "operationId": "createArticleUsingPOST",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "*/*"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "request",
                        "description": "request",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/createArticleUsingPOST"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/createdArticleResponse"
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "403": {
                        "description": "Forbidden"
                    },
                    "404": {
                        "description": "Not Found"
                    }
                },
                "deprecated": false
            }
        },
        "/articles/{id}": {
            "get": {
                "tags": [
                    "article-controller"
                ],
                "summary": "getArticleById",
                "operationId": "getArticleByIdUsingGET",
                "produces": [
                    "*/*"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "id",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "403": {
                        "description": "Forbidden"
                    },
                    "404": {
                        "description": "Not Found"
                    }
                },
                "deprecated": false
            }
        }
    },
    "definitions": {
        "createArticleUsingPOST": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string"
                },
                "author": {
                    "type": "string"
                },
                "text": {
                    "type": "string"
                },
                "url_to_image": {
                    "type": "string"
                },
                "violence_type": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "Sexual",
                            "Financial",
                            "Emotional"
                        ]
                    }
                },
                "created_at": {
                    "type": "string",
                    "format": "date-time"
                }
            },
            "title": "createArticleUsingPOST"
        },
        "createdArticleResponse": {
            "type": "object",
            "properties": {
                "body": {
                    "type": "object"
                },
                "success": {
                    "type": "boolean"
                }
            },
            "title": "createdArticleResponse"
        }
    },
    "schemes": [
        "https"
    ]
}